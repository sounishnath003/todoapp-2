<p id="notice"><%= notice %></p>

<div class="container block is-large">
    <div class="has-text-centered">
    <h1 class="title mt60 p10 has-text-centered mt-5 has-text-black">Todo Lists</h1>

      <div class="form">
        <div class="controls">
                <%= form_tag(todo_lists_path, method: :get) do %>
                  <%= text_field_tag :search, class: "input is-link" %>
                  <%= submit_tag "Search", :name => nil, class: "button is-small is-link" %>
    <% end %>

        </div>
      </div>
    </div>

    <table class="table mr-auto  is-striped has-text-centered">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody class="subtitle is-3 p30 mb10">
        <% @todo_lists.each do |todo_list| %>
          <tr class="subtitle is-2">
            <td><%= todo_list.title %></td>
            <td><%= truncate todo_list.description, length: 100 %></td>
            <td><%= link_to 'Show', todo_list, class: "button is-warning is-small" %></td>
            <td><%= link_to 'Edit', edit_todo_list_path(todo_list), class: "button is-link is-small" %></td>
            <td><%= link_to 'Destroy', todo_list, method: :delete, class: "button is-danger is-small" , data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>


</div>

<div class="has-text-centered mr-auto">
<%= link_to 'New Todo List', new_todo_list_path, {:class => "button is-primary mx-auto"} %>
</div>
